<p style="color: green"><%= notice %></p>

<%= render @color %>

<div class="container mt-3">
  <%= link_to "Edit this color", edit_color_path(@color), class: "btn btn-outline-primary" %>
  <%= link_to "Back to colors", colors_path, class: "btn btn-outline-primary" %>

  <%= button_to "Destroy this color", @color, method: :delete, class: "btn btn-outline-danger mt-3" %>
</div>
