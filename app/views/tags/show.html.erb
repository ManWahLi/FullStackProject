<p style="color: green"><%= notice %></p>

<%= render @tag %>

<div class="container mt-3">
  <%= link_to "Edit this tag", edit_tag_path(@tag), class: "btn btn-outline-primary" %>
  <%= link_to "Back to tags", tags_path, class: "btn btn-outline-primary" %>

  <%= button_to "Destroy this tag", @tag, method: :delete, class: "btn btn-outline-danger mt-3" %>
</div>
