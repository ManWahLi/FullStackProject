<div class="container mt-3" id="tag">
  <h1>Tag</h1>
  <div class="d-flex justify-content-end">
    <%= paginate @tags %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <th style="width: 30%">Tag Name</th>
        <th>Products in Tag</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @tags.each do |tag| %>
        <tr>
          <td>
            <%= tag.tag_name %>
          </td>
          <td>
            <%= tag.products.count %>
          </td>
          <td>
            <%= link_to "Show Products", tag, class: "btn btn-outline-primary" %>
          </td>
          <td>
            <%= link_to "Edit", edit_tag_path(tag), class: "btn btn-outline-success" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "New tag", new_tag_path, class: "btn btn-outline-primary" %>
</div>



