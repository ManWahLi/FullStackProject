<div class="container mt-3" id="<%= dom_id category %>">
  <h1>
    <strong>
      <%= category.category_name %>
    </strong>
  </h1>
  <h3>Products by Category (Order by Rating)</h3>
  <table class="table">
    <%= render partial: 'layouts/components/theadproduct' %>
    <tbody>
      <%= render partial: 'layouts/components/tbodyproduct', collection: category.products.order("rating DESC"), as: :product %>
    </tbody>
  </table>
</div>


