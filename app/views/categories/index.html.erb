<div class="container mt-2" id="categories">
  <h1>Categories</h1>
  <% unless (paginate @categories).present? %>
    <br><br>
  <% end %>
  <div class="d-flex justify-content-end">
    <%= paginate @categories %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <th style="width: 30%">Category Name</th>
        <th>Products in Category</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td>
            <%= category.category_name %>
          </td>
          <td>
            <%= category.products.count %>
          </td>
          <td>
            <%= link_to "Show Products", category, class: "btn btn-outline-primary" %>
          </td>
          <td>
            <%= link_to "Edit", edit_category_path(category), class: "btn btn-outline-success" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "New category", new_category_path, class: "btn btn-outline-primary" %>
</div>

