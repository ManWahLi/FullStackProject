<!-- app/views/kaminari/_pagination.html.erb -->

<nav aria-label="Page navigation">
  <ul class="pagination">
    <% if @paginator.current_page > 1 %>
      <li class="page-item">
        <%= link_to_unless @paginator.current_page == 1, raw('&laquo;'), params.merge(:page => 1), :class => 'page-link' %>
      </li>
    <% end %>

    <% @paginator.each do |item| %>
      <li class="page-item <%= 'active' if item.current? %>">
        <%= link_to_unless item.current?, item.number, item.url, :class => 'page-link' %>
      </li>
    <% end %>

    <% if @paginator.current_page < @paginator.total_pages %>
      <li class="page-item">
        <%= link_to_unless @paginator.current_page == @paginator.total_pages, raw('&raquo;'), params.merge(:page => @paginator.total_pages), :class => 'page-link' %>
      </li>
    <% end %>
  </ul>
</nav>
