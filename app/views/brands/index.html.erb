<div class="m-3" id="brands">
  <h1>All Brands</h1>
  <table class="table">
    <thead>
      <tr>
        <th style="width: 30%">Brand Name</th>
        <th>Products in Brand</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @brands.each do |brand| %>
        <tr>
          <td>
            <%= brand.brand_name %>
          </td>
          <td>
            <%= brand.products.count %>
          </td>
          <td>
            <button type="button" class="btn btn-outline-primary"><%= link_to "Show this brand", brand %></button>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New brand", new_brand_path %>
