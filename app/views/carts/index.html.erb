<div class="container mt-5">
  <% if cart.present? %>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Rating</th>
          <th></th>
          <th>Image</th>
          <th>Product Name</th>
          <th>Price CA$</th>
          <th>Quantity</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% cart.each do |product| %>
          <tr>
            <td>
              <%= product.rating %>
            </td>
            <td>
              <%= render partial: 'layouts/components/ratingstar', locals: { product: product } %>
            </td>
            <td>
              <%= link_to(image_tag(product.image_link, alt: product.name, width: "60"), product) %>
            </td>
            <td>
              <%= link_to product.name, product %>
            </td>
            <td>
              <%= product.price.to_f / 10 %>
            </td>
            <td>
              qty
            </td>
            <td>
              <%= button_to "Remove from Cart", cart_path(product), method: :delete %>
            </td>
          </tr>
        <% end %>
      </tbody>
    <table>
  <% else %>
    <p>Your shopping cart is empty.</p>
  <% end %>
</div>