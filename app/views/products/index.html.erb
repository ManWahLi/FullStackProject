<div class="container mt-3" id="products">
  <h1>Products</h1>
  <table class="table table-hover">
    <%= render partial: 'thead' %>
    <tbody>
      <%= render partial: 'tbody', collection: @products.order("rating DESC, product_name"), as: :product %>
    </tbody>
  </table>
  <%= link_to "New product", new_product_path, class: "btn btn-outline-primary" %>
</div>
