<p style="color: green"><%= notice %></p>

<h1>All Products</h1>

<div id="products">
  <table class="table">
    <tr>
      <th>Rating</th>
      <th>Image</th>
      <th>Product Name</th>
    </tr>
    <% @products.each do |product| %>
      <tr>
        <td>
          <%= product.rating %>
        </td>
        <td>
          <%= link_to(image_tag(product.image_link, alt: product.product_name, width: "60"), product) %>
        </td>
        <td>
          <%= link_to product.product_name, product %>
        </td>
      </tr>
    <% end %>
  </table>
</div>

<%= link_to "New product", new_product_path %>