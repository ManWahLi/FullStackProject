<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :product_name, style: "display: block" %>
    <%= form.text_field :product_name %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price %>
  </div>

  <div>
    <%= form.label :image_link, style: "display: block" %>
    <%= form.text_area :image_link %>
  </div>

  <div>
    <%= form.label :rating, style: "display: block" %>
    <%= form.text_field :rating %>
  </div>

  <div>
    <%= form.label :category_id, style: "display: block" %>
    <%= form.text_field :category, value: form.object.new_record? ? "" : product.category.category_name %>
  </div>

  <div>
    <%= form.label :brand_id, style: "display: block" %>
    <%= form.text_field :brand, value: form.object.new_record? ? "" : product.brand.brand_name %>
  </div>

  <div>
    <%= form.label :product_type_id, style: "display: block" %>
    <%= form.text_field :product_type, value: form.object.new_record? ? "" : product.product_type.product_type_name %>
  </div>

  <div>
    <%= form.submit class: "btn btn-outline-primary mt-2 mb-3" %>
  </div>
<% end %>
